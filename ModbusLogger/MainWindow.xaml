<Window x:Class="ModbusLogger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModbusLogger"
        mc:Ignorable="d"
        Title="Modbus RTU Logger" Height="450" Width="800" Closed="Window_Closed">
    <Grid>
        <Button Content="StartRead" HorizontalAlignment="Left" Margin="262,181,0,0" VerticalAlignment="Top" Width="94" Click="StartRead_Click"/>
        <TextBox Name="statetxt" HorizontalAlignment="Left" Height="23" Margin="414,202,0,0" TextWrapping="Wrap" Text="MainWriteIndex" VerticalAlignment="Top" Width="120"/>
        <Button Content="Get State" HorizontalAlignment="Left" Margin="414,169,0,0" VerticalAlignment="Top" Width="94" Click="GetState_Click"/>
        <Button Content="StopRead" HorizontalAlignment="Left" Margin="262,230,0,0" VerticalAlignment="Top" Width="94" Click="StopRead_Click"/>
        <TextBox x:Name="readlentxt" HorizontalAlignment="Left" Height="23" Margin="414,230,0,0" TextWrapping="Wrap" Text="MainReadIndex" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="outstrtxt" HorizontalAlignment="Left" Height="127" Margin="88,258,0,0" TextWrapping="Wrap" Text="Current Modbus Data" VerticalAlignment="Top" Width="598"/>

    </Grid>
</Window>
